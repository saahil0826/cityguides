<%- include("../partials/header") %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center">Edit <%= campground.name %></h1>
    <div style="width: 30%; margin:30px auto;">
      <form class="" action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
        <div class="form-group">
          <label for="">Name</label>
          <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]" required>
        </div>
        <div class="form-group">
          <label for="">Price</label>
          <input class="form-control" type="number" value="<%= campground.price %>" name="campground[price]" required>
        </div>
        <div class="form-group">
          <label for="">Image url:</label>
          <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]" required>
        </div>
        <div class="form-group">
          <label for="">Description</label>
          <input class="form-control" type="text" value="<%= campground.description %>" name="campground[escription]">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
          <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
